pipeline {
    agent any
    agent {
        // If you want to specify a node with the 'build' label, keep this; otherwise, use 'agent any' for general use
        node {
            label 'build' // Replace 'build' with your actual node label if needed
        }
    }

    tools {
        // Ensure Maven is properly configured in Jenkins under this label
        maven 'M2_HOME' // Make sure 'M2_HOME' matches the name of your Maven installation in Jenkins
    }

    options {
        // Timeout counter starts after the agent is allocated
        timeout(time: 1, unit: 'MINUTES') // Changed to 'MINUTES', since 'SECONDS' is usually too short
    }

    environment {
        APP_ENV = "DEV" // Set your environment variable
    }

    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/hwafa/atelier-jenkins.git',
                    credentialsId: 'jenkins-example-github-pat' // Ensure this credential exists in Jenkins
            }
        }

        stage('Code Build') {
            steps {
                sh 'mvn install -Dmaven.test.skip=true' // Skipping tests for faster builds
            }
        }
    }

    post {
        always {
            echo "======Always executed, cleanup if needed======"
        }
        success {
            echo "=====Pipeline executed successfully====="
        }
        failure {
            echo "======Pipeline execution failed======"
        }
    }
}
